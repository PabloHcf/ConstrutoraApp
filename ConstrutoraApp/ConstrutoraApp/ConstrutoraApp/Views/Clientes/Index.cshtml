@model IEnumerable<ConstrutoraApp.Models.Cliente>
@{
    ViewData["Title"] = "Clientes";
}
<h1>Lista de Clientes</h1>
<a class="btn btn-success mb-2" asp-action="Create">Novo Cliente</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Telefone</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Nome</td>
                <td>@cliente.Email</td>
                <td>@cliente.Telefone</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@cliente.Id">Detalhes</a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@cliente.Id">Editar</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@cliente.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>